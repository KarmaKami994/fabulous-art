---
import { type Locale } from '@/i18n/utils';

interface Props {
  title: string;
  slug: string;
  image: string;
  size: string;
  medium: string;
  year: number;
  price: string;
  locale: Locale;
}

const { title, slug, image, size, medium, year, price, locale } = Astro.props;
const detailHref = `/${locale}/portfolio/${slug}`;
---

<a href={detailHref} class="portfolio-card" aria-label={title}>
  <div class="portfolio-card__image-wrap">
    <img src={image} alt={title} loading="lazy" class="portfolio-card__image" />
  </div>
  <div class="portfolio-card__overlay">
    <div class="portfolio-card__info">
      <h3 class="portfolio-card__title">{title}</h3>
      <div class="portfolio-card__meta">
        <span>{size}</span>
        <span>{medium}</span>
        <span>{year}</span>
        <span>{price}</span>
      </div>
    </div>
  </div>
</a>

<style>
  .portfolio-card {
    display: block;
    position: relative;
    overflow: hidden;
    aspect-ratio: 4 / 5;
    background: var(--color-gray-100);
    cursor: pointer;
  }

  .portfolio-card__image-wrap {
    position: absolute;
    inset: 0;
  }

  .portfolio-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow), opacity var(--transition-base);
  }

  .portfolio-card__overlay {
    position: absolute;
    inset: 0;
    background: rgba(240, 235, 227, 0.95);
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    opacity: 0;
    transition: opacity var(--transition-base);
  }

  .portfolio-card:hover .portfolio-card__overlay {
    opacity: 1;
  }

  .portfolio-card:hover .portfolio-card__image {
    transform: scale(1.03);
    opacity: 0.3;
  }

  .portfolio-card__info {
    padding: var(--space-xl);
  }

  .portfolio-card__title {
    font-family: var(--font-heading);
    font-size: var(--text-2xl);
    font-weight: 400;
    font-style: italic;
    color: var(--color-gray-800);
    margin-bottom: var(--space-lg);
    letter-spacing: 0.01em;
  }

  .portfolio-card__meta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xs);
  }

  .portfolio-card__meta span {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    color: var(--color-gray-500);
    letter-spacing: 0.02em;
  }

  /* Mobile: Tap to reveal */
  @media (hover: none) {
    .portfolio-card__overlay {
      opacity: 0;
      transition: opacity var(--transition-base);
    }

    .portfolio-card:active .portfolio-card__overlay {
      opacity: 1;
    }
  }
</style>
