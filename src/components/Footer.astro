---
import { t, getLocalizedPath, type Locale } from '@/i18n/utils';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
---

<footer class="footer">
  <div class="footer__inner container">
    <!-- Logo -->
    <a href={getLocalizedPath('/', locale)} class="footer__logo" aria-label="FabulousArt Home">
      <img src="/images/logo/logo.png" alt="FabulousArt" class="footer__logo-img" />
    </a>

    <!-- Divider -->
    <div class="footer__divider"></div>

    <!-- Bottom Row -->
    <div class="footer__bottom">
      <p class="footer__copyright">{t(locale, 'footer.copyright')}</p>

      <div class="footer__links">
        <a href={`mailto:${t(locale, 'footer.email')}`} class="footer__link">
          {t(locale, 'footer.email')}
        </a>
        <a href={getLocalizedPath('/datenschutz', locale)} class="footer__link">
          {t(locale, 'footer.privacy')}
        </a>
      </div>

      <!-- Instagram -->
      <a
        href="https://www.instagram.com/"
        target="_blank"
        rel="noopener noreferrer"
        class="footer__social"
        aria-label="Instagram"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <rect width="20" height="20" x="2" y="2" rx="5" ry="5"/>
          <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
          <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/>
        </svg>
      </a>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding-block: var(--space-3xl) var(--space-2xl);
    margin-top: var(--space-4xl);
  }

  .footer__inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xl);
  }

  .footer__logo-img {
    height: 40px;
    width: auto;
    object-fit: contain;
    opacity: 0.7;
    transition: opacity var(--transition-fast);
  }

  .footer__logo:hover .footer__logo-img {
    opacity: 1;
  }

  .footer__divider {
    width: 60px;
    height: 1px;
    background: var(--color-border);
  }

  .footer__bottom {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-xl);
    flex-wrap: wrap;
  }

  .footer__copyright {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    max-width: none;
  }

  .footer__links {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
  }

  .footer__link {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    transition: color var(--transition-fast);
  }

  .footer__link:hover {
    color: var(--color-text);
  }

  .footer__social {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-muted);
    transition: color var(--transition-fast);
  }

  .footer__social:hover {
    color: var(--color-text);
  }

  @media (max-width: 768px) {
    .footer__bottom {
      flex-direction: column;
      gap: var(--space-md);
    }

    .footer__links {
      flex-direction: column;
      gap: var(--space-sm);
    }
  }
</style>
