---
import BaseLayout from '@/layouts/BaseLayout.astro';
const locale = 'en';
const pageTitle = 'Custom Drawing';
---
<BaseLayout title={pageTitle} locale={locale}>
  <section class="section" style="padding-top: calc(var(--header-height) + var(--space-4xl));">
    <div class="container">
      <h1>{pageTitle}</h1>
      <p style="margin-top: var(--space-lg); color: var(--color-text-secondary);">This page is under construction.</p>
    </div>
  </section>
</BaseLayout>
