---
import BaseLayout from '@/layouts/BaseLayout.astro';
import PortfolioGrid from '@/components/PortfolioGrid.astro';
import { portfolioWorks } from '@/content/portfolio/works';
import { t } from '@/i18n/utils';

const locale = 'en';
---

<BaseLayout
  title={t(locale, 'portfolio.title')}
  locale={locale}
  description="Portfolio of hyperrealistic charcoal drawings by Fabienne Meyer. Discover unique artworks."
>
  <section class="portfolio-page">
    <div class="container">
      <header class="portfolio-page__header fade-in">
        <h1 class="portfolio-page__title">{t(locale, 'portfolio.title')}</h1>
      </header>

      <PortfolioGrid items={portfolioWorks} locale={locale} />
    </div>
  </section>
</BaseLayout>

<style>
  .portfolio-page {
    padding-top: calc(var(--header-height) + var(--space-3xl));
    padding-bottom: var(--space-4xl);
  }

  .portfolio-page__header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }

  .portfolio-page__title {
    font-family: var(--font-heading);
    font-size: var(--text-4xl);
    font-weight: 300;
    letter-spacing: 0.05em;
    color: var(--color-text);
  }
</style>
